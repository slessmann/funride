<!DOCTYPE html>
<html>
  <head>
    <title>Funride</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 
  <body>
    
<div class= "links_general">
<p class="navbar-text pull-right">
	<% if user_signed_in? %>
  		Logged in as <strong><%= current_user.user_name %></strong>.
  		<%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  		<%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    
    </div>

<div class= "links_specific">
        <%= link_to "Home", root_path(current_user), :class => 'navbar-link'  %> |
        <%= link_to "My Rides", user_rides_path(current_user), :class => 'navbar-link'  %> |
        <%= link_to "Create Ride", new_user_ride_path(current_user), :class => 'navbar-link'  %>
      </div>

    	<% else %>
  		<%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  		<%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
	<% end %>
</p>
 

  	<% if notice %>
 		 <p class="alert alert-success"><%= notice %></p>
	<% end %>
	<% if alert %>
  		<p class="alert alert-danger"><%= alert %></p>
	<% end %>
    <%= yield %>
  </body>


</html>
